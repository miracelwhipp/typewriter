
<#assign typewriterVersion="${project.version}" openHtmlToPdfVersion="${openhtml.version}" flexmarkVersion="${flexmark.version}" freemarkerVersion="${freemarker.version}">

<#macro example>
<div class="typewriter-example">
<@markdown>
#### Beispiel
</@markdown>

<blockquote>
<#nested>
</blockquote>
</div>
</#macro>

<#macro formula>
<div class="typewriter-formula">
<@markdown>
<#nested>
</@markdown>
</div>
</#macro>

<#macro segment class>
<div class="${class}">
<@markdown>
<#nested>
</@markdown>
</div>
</#macro>

<#macro cover>
<div class="typewriter-cover">
<@markdown>
<#nested>
</@markdown>
</div>
</#macro>

<#macro pagebreak>
<div style="page-break-after: always"/>
</#macro>

<#macro section sectionName>
<section>
${structure.enterSection(sectionName)}
<h${[[structure.sectionDepth(), 6]?min, 1]?max}>${sectionName}</h${[[structure.sectionDepth(), 6]?min, 1]?max}>
<@markdown>
<#nested>
</@markdown>
${structure.leaveSection()}
</section>
</#macro>

<#macro footnote>
<span style="float: footnote">
<#-- <@markdown> -->
<#nested>
<#-- </@markdown> -->
</span>
</#macro>